@model CTMS.Web.Areas.AdminConsole.Models.SetPermission.SetPermissionModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/AdminConsole/Views/Shared/_AdminConsoleLayout.cshtml";
    ViewData["Title"] = "SetPermission";
}


@section Scripts {

    <script type="text/javascript" nonce="uG2bsk6JIH923nsvp01n24KE">
        $(document).ready(function () {

            if ($('input[id="chknew"]').prop("checked") == true) {
                $("#userdesignation").show();
            }
            else {
                $("#userdesignation").hide();
                $("#ddlUserDesgn").val("0");
            }

            $('input[id="chknew"]').click(function () {
                if ($("#ddlDesgn").val() == 0) {
                    $("#ddlDesgn").focus();
                    new swal("Please Select Designation.");
                    return false;
                }
                else if ($("#ddlProjectLinkdesg").val() == 0) {
                    $("#ddlProjectLinkdesg").focus();
                    new swal("Please Select Project Link Name.");
                    return false;
                }
                else {
                    if ($(this).prop("checked") == true) {
                        $("#userdesignation").show();
                    }
                    else {
                        $("#userdesignation").hide();
                        $("#ddlUserDesgn").val("0");
                    }
                }
            });


            $(".showhidedis").attr("style", "display:none");

            var rows = $(".tablechk tr");
            for (var i = 0; i < rows.length; i++) {
                var row = $(rows).eq(i);
                var cb = row.find("input:radio")
                var name = "grp" + i;
                $(cb).attr('name', name);
            }

            $(".checkParent").click(function () {
                if ($(this).is(":checked")) {
                    var isAllChecked = 0;
                    $(".checkParent").each(function () {
                        if (!this.checked) {
                            isAllChecked = 1;
                        }
                    })
                    $(this).closest('table').find("tbody").find(".checkChild").prop("checked", true);
                } else {

                    $(this).closest('table').find("tbody").find(".checkChild").prop("checked", false);
                }
            });

            $(".checkChild").click(function () {
                var totChk = 0;
                var totChecked = 0;
                $(this).closest('table').find('tbody').find('tr').each(function (index) {
                    var Result = $(this).find("td").eq(0).find(".checkChild").is(":checked");
                    totChk++;
                    if (Result == true) {
                        totChecked++;
                    }
                });
                if (totChecked == totChk) {
                    $(this).closest('table').find('thead').find('tr').find(".checkParent").prop("checked", true);
                }
                else {
                    $(this).closest('table').find('thead').find('tr').find(".checkParent").prop("checked", false)
                }
            });
        });
    </script>
    <script type="text/javascript" nonce="uG2bsk6JIH923nsvp01n24KE">
        function check_uncheck_checkbox(isChecked) {
            if (isChecked) {
                $('input[name="chkbox"]').each(function () {
                    this.checked = true;
                });
            }
            else {
                $('input[name="chkbox"]').each(function () {
                    this.checked = false;
                });
            }
        }
        function validateForm() {


            if ($("#ddlDesgn").val() == 0) {
                $("#ddlDesgn").focus();
                new swal("Please Select Designation.");
                return false;
            }
            else if ($("#ddlProjectLinkdesg").val() == 0) {
                $("#ddlProjectLinkdesg").focus();
                new swal("Please Select Project Link Name.");

                return false;
            }
            else if ($('input[id="chknew"]').prop("checked") == true) {
                if ($("#ddlUserDesgn").val() == 0) {
                    $("#ddlUserDesgn").focus();
                    new swal("Please Select User Designation.");
                    return false;
                }
            }
            else if ($('input[id="chknew"]').prop("checked") == true) {
                if ($("#ddlUser").val() == 0) {
                    $("#ddlUser").focus();
                    new swal("Please Select User ");
                    return false;
                }
            }

        }
        function validateFormUser() {
            if ($("#ddlUser").val() == 0) {
                $("#ddlUser").focus();
                new swal("Please Select User.");
                return false;
            }
            else if ($("#ddlProjectLinkuser").val() == 0) {
                $("#ddlProjectLinkuser").focus();
                new swal("Please Select Project Link Name.");

                return false;
            }
        }
    </script>



    <script type="text/javascript" language="javascript">

        function ShowHideDiv() {
            var chkdesignation = document.getElementById("rdodesignation");
            var chkUser = document.getElementById("rdouser");
            var dvdegination = document.getElementById("dvdegination");
            var dvsetpermission = document.getElementById("dvsetpermission");
            var dvuser = document.getElementById("dvuser");
            dvdegination.style.display = chkdesignation.checked ? "block" : "none";
            dvsetpermission.style.display = chkdesignation.checked ? "block" : "none";
            dvuser.style.display = chkUser.checked ? "block" : "none";
        }

    </script>
    @*-------------------------------------------------Setpermission Submit & Update(current working code)--------------------------------------------*@
    <script type="text/javascript" nonce="uG2bsk6JIH923nsvp01n24KE">
        var getdata = '';
        var designationid;
        var projectid;
        var radioValidation = 0;

        $('.btnupdate').click(function (e) {
            designationid = $("#ddlDesgn").val();
            projectid = $("#ddlProjectLinkdesg").val();

            if ($("#ddlDesgn").val() == 0) {
                $("#ddlDesgn").focus();
                new swal("Please Select Designation.");
                return false;
            }
            else if ($('input[name=chkbox]:checked').length == 0) {
                new swal("Please Check Primary Link.");
                return false;
            }
            $(".tablechk input[type=checkbox]:checked").each(function () {
                debugger;
                radioValidation = 0;
                var row = $(this).closest('tr');
                var status = $(this).closest('table').find("tbody").find("input:radio[type=radio]:checked").val();
                if (!status) {
                    radioValidation = 1;
                    new swal("Please select permission.");
                    return false;
                }
                else {
                    var row = $(this).closest("tr")[0];
                    var rdoval = $(row).find('input[type="radio"]:checked').val();
                    if (rdoval > 0 && rdoval != undefined && rdoval != null && rdoval != "") {
                        getdata += designationid + '|' + projectid + '|' + $(row).find('.hdnPlinkId').val() + '|' + $(row).find('input[type="radio"]:checked').val() + '^';
                    }
                    return true;
                }
            });
            var datastring = {
                setpermissionList: getdata,
            };
            if (radioValidation == 0) {
                $("#btnupdate").prop('disabled', true);
               $.ajax({
    type: "post",
    url: '@Url.Content("~/AdminConsole/SetPermission/SetPermissionData")',
    data: JSON.stringify(datastring),
    dataType: "json",
    contentType: 'application/json',
    traditional: true,
    success: function (data) {
        if (data === "Set permission Successfully") {
            Swal.fire({
                title: "",
                text: "Set permission Successfully",
                icon: "success"
            }).then(() => {
                window.location.href = window.location.origin + "@Url.Action("SetPermission", "SetPermission")";
            });
            getdata = '';
        }
        $("#btnupdate").prop('disabled', false);
    },
    error: function (error) {
        $("#btnupdate").prop('disabled', false);
    }
});


            }
            else {
                return false;
            }



        });
    </script>

    <script type="text/javascript" nonce="uG2bsk6JIH923nsvp01n24KE">

        function ShowHide(tblPrimary, lnkTogle) {

            if (document.getElementById(tblPrimary).style.display == 'none') {
                document.getElementById(tblPrimary).style.display = 'block';
                document.getElementById(lnkTogle).innerHTML = 'Hide';
            }
            else {
                document.getElementById(tblPrimary).style.display = 'none';
                document.getElementById(lnkTogle).innerHTML = 'Show';
            }
        }

    </script>

}
