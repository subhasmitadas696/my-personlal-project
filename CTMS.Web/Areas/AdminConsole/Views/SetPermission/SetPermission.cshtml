<div class="card card--lg">

    <div class="card-body">

        <div class="form-group row">

            <div class="col-md-4 form-group">
                <label class="control-label">Set Permission<span style="color:Red">*</span></label>
                <div class="input-group">
                    <label for="rdodesignation">
                        <input type="radio" id="rdodesignation" name="permission" onclick="ShowHideDiv()" checked />
                        By Designation
                    </label>&nbsp;
                    <label for="rdouser">
                        <input type="radio" id="rdouser" name="permission" onclick="ShowHideDiv()" />
                        By User
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div id="dvdegination">
                <form id="frmsearchPrimaryLink" data-parsley-validate novalidate method="post" asp-action="BindSetPermission" asp-controller="SetPermission" asp-area="AdminConsole" asp-antiforgery="true" onsubmit="return validateForm()">
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <label class="control-label">Designation<span style="color:Red">*</span></label>
                            <div class="input-group">
                                <select asp-for="DesignId" name="DesignId" id="ddlDesgn" asp-items="@(new SelectList(ViewBag.Designation, "ROLEID", "ROLENAME"))" class="form-select">
                                    <option value="0">--select Designation--</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 form-group">
                            <label class="control-label">Project Link Name<span style="color:Red">*</span></label>
                            <div class="input-group">
                                <select asp-for="INTPROJECTLINKID" asp-items="@(new SelectList(Model.ProjectList,"INTPROJECTLINKID","NVCHPROJECTLINKNAME"))" id="ddlProjectLinkdesg" class="form-select">
                                    <option value="0">--Select Project Link--</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4">
                        <div class="text-center">
                            <button type="submit" name="submit" id="btnSearch" class="btn btn-success" value="Submit">Search</button>
                        </div>
                    </div>
                </form>
            </div>
            <div id="dvuser" style="display:none">
                <form id="frmsearchPrimaryLink" data-parsley-validate novalidate method="post" asp-action="BindSetPermissionUser" asp-controller="SetPermission" asp-area="AdminConsole" asp-antiforgery="true" onsubmit="return validateFormUser()">
                    <div class="form-group row">
                        <div class="col-md-4 form-group">
                            <label class="control-label">User<span style="color:Red">*</span></label>
                            <div class="input-group">
                                <select asp-for="UserId" name="UserId" id="ddlUser" asp-items="@(new SelectList(ViewBag.UserDetails, "intuserid", "vchusername"))" class="form-select">
                                    <option value="0">--select User--</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 form-group">
                            <label class="control-label">Project Link Name<span style="color:Red">*</span></label>
                            <div class="input-group">
                                <select asp-for="INTPROJECTLINKID" asp-items="@(new SelectList(Model.ProjectList,"INTPROJECTLINKID","NVCHPROJECTLINKNAME"))" id="ddlProjectLinkuser" class="form-select">
                                    <option value="0">--Select Project Link--</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4">
                        <div class="text-center">
                            <button type="submit" name="submit" id="btnSearchuser" class="btn btn-success" value="Submit">Search user</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body table table-bordered cell-borde" id="dvsetpermission">
        @{
            @if (Model.GlobalPrimaryList != null)
            {

                @foreach (var global in Model.GlobalPrimaryList.Select(s => new { s.GLOBALNAME, s.GLOBALID, s.PRIMARYLINKCOUNT, s.PRIMARYLINKPERMISSIONCOUNT }).Distinct())
                {
                    <div class="table">
                        <div>
                            <table data-toggle="table" class="table table-bordered cell-border" id="example1">
                                <thead>
                                    <tr>
                                        <th style="width:555px">@global.GLOBALNAME</th>
                                        <th><a class="btn btn-primary" id='lnk+@global.GLOBALID' onclick=ShowHide('tbl+@global.GLOBALID','lnk+@global.GLOBALID') href="#">Show</a> </th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>

                        </div>
                        <div>
                            <table data-toggle="table" id='tbl+@global.GLOBALID' class="tablechk table-bordered table-padding showhidedis">
                                <thead>
                                    <tr>
                                        <th width="10px">
                                            @if (global.PRIMARYLINKCOUNT == global.PRIMARYLINKPERMISSIONCOUNT)
                                            {
                                                <input type="checkbox" class="checkParent" checked="checked" />
                                            }
                                            else
                                            {
                                                <input type="checkbox" class="checkParent" />
                                            }
                                        <td width="50px"><strong>SL#</strong></td>
                                        <td class="pl-2"><strong>Primary Link</strong></td>
                                        <td class="pl-2"><strong>Add</strong></td>

                                        <td class="pl-2"><strong>view</strong></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var primarylist in Model.GlobalPrimaryList.Where(w => w.GLOBALNAME == @global.GLOBALNAME).Select((x, i) => new { Data = x, Index = i + 1 }))
                                    {
                                        <tr>
                                            @if (primarylist.Data.TINACCESS == "0" || primarylist.Data.TINACCESS == null)
                                            {
                                                <td>
                                                    <input type="checkbox" name="chkbox" value="@primarylist.Data.PRIMARYID" class="checkChild" />
                                                    <input type="hidden" value="@primarylist.Data.PRIMARYID" class="hdnPlinkId" />
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <input type="checkbox" name="chkbox" value="@primarylist.Data.PRIMARYID" checked="checked" class="checkChild" />
                                                    <input type="hidden" value="@primarylist.Data.PRIMARYID" class="hdnPlinkId" />
                                                </td>
                                            }
                                            <td>@primarylist.Index</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => primarylist.Data.PRIMARYNAME)
                                            </td>

                                            @if (primarylist.Data.TINACCESS == "0" || primarylist.Data.TINACCESS == null)
                                            {
                                                <td><input asp-for="command.VCHACTION1" class='cboxRadio' type='radio' name='cboxRadioA+@global.GLOBALID+@primarylist.Index' value="1" /></td>
                                                <td><input asp-for="command.VCHACTION3" class='cboxRadio' type='radio' name='cboxRadioV+@global.GLOBALID+@primarylist.Index' value="3" /></td>
                                            }
                                            else if (primarylist.Data.TINACCESS == "1")
                                            {
                                                <td><input class='cboxRadio' type='radio' name='cboxRadioA+@global.GLOBALID+@primarylist.Index' value="1" checked="checked" /></td>
                                                <td><input class='cboxRadio' type='radio' name='cboxRadioV+@global.GLOBALID+@primarylist.Index' value="3" /></td>
                                            }
                                            else if (primarylist.Data.TINACCESS == "2")
                                            {
                                                <td><input class='cboxRadio' type='radio' name='cboxRadioA+@global.GLOBALID+@primarylist.Index' value="1" /></td>
                                                <td><input class='cboxRadio' type='radio' name='cboxRadioV+@global.GLOBALID+@primarylist.Index' value="3" /></td>
                                            }
                                            else if (primarylist.Data.TINACCESS == "3")
                                            {
                                                <td><input class='cboxRadio' type='radio' name='cboxRadioA+@global.GLOBALID+@primarylist.Index' value="1" /></td>
                                                <td><input class='cboxRadio' type='radio' name='cboxRadioV+@global.GLOBALID+@primarylist.Index' value="3" checked="checked" /></td>
                                            }



                                        </tr>

                                    }
                                </tbody>

                            </table>
                        </div>


                    </div>

                }
                <div class="mt-4">
                    <button type="button" class="btn btn-primary btnupdate" id="btnupdate">Update</button>
                </div>
            }
        }
        <div class="table-responsive">
        </div>

    </div>

</div>








