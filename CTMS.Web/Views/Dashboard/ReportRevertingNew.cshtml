@{
    ViewData["Title"] = "ReportRevert";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
    var Data = ViewBag.TroupeDetails;
    var Data1 = ViewBag.ImageList;
    var Data2 = ViewBag.VideoList;
}
@Html.AntiForgeryToken()
<link href="~/css/troupe-reporting-new.css" rel="stylesheet" />
<style>
</style>
<main class="content-body">
    <div class="card card--lg">
        @if (Data != null)
         {
            <div class="card-body">
                <h5 class="view-form-details__title">Event Details</h5>
                <div class="row g-4 mb-4">
                    <div class="col-md-4">
                        <input type="hidden" id="hdnimgpath" value="@ViewBag.Imgpath">
                        <input type="hidden" id="hdnvdopath" value="@ViewBag.Vdopath">
                        <input type="hidden" id="hdnimgidname" value="">
                        <input type="hidden" id="hdnvdoidname" value="">
                        <input type="hidden" id="hdntdid" value="">
                        <input type="hidden" id="hdnvdotdid" value="">
                        <input type="hidden" id="hdnimagenamecheck" value="" />
                        <input type="hidden" id="hdntroupeid" value="@Data[0].TroupeId" />
                        <input type="hidden" id="hdnassigneventid" value="@Data[0].AssignEventId" />
                        <label for="" class="control-label">
                            Event Title
                        </label>
                        <strong>
                            @Data[0].EventTitle
                        </strong>
                    </div>
                    <div class="col-md-4">
                        <label for="" class="control-label">
                            Event Date
                        </label>
                        <strong>
                            @Data[0].DateOfPerform
                        </strong>
                    </div>
                    <div class="col-md-4">
                        <label for="" class="control-label">
                            Address
                        </label>
                        <strong>
                            @Data[0].DistrictName
                        </strong>
                        <div class="text-muted">@Data[0].BlockName</div>
                        <div class="text-muted">@Data[0].GPName</div>

                    </div>
                </div>
                <h5 class="view-form-details__title">Place of Perfromance</h5>
                <div>
                    <strong>Note:</strong>
                    <ul class="note-list">
                        <li>For Image:Please remove the photos having (x) symbol and upload photos sequentially.</li>
                        <li>For Video: Please remove the video having (x) symbol upload video sequentially.</li>
                        <li>Maximum Image Size 1MB and Video Size 5MB.</li>
                    </ul>
                </div>
                @{
                    int cnt = 1;
                    int count = 1;
                    bool isFirstLoop = true;
                    bool isFirstLoopVdo = true;
                    
                }
                @foreach (var items in Data)
                {
                    <div class="place-box">
                        <div class="p-3 memberdetails">
                            <div class="row g-4">
                                <div class="col-md-6 col-xl-3 d-none dnonevlgid">
                                    <label for="" class="control-label">
                                        Village Id
                                    </label>
                                    <strong>@items.VillageId</strong>
                                </div>
                                <div class="col-md-6 col-xl-3">
                                    <label for="" class="control-label">
                                        Village Name
                                    </label>
                                    <strong>@items.VLGNAME</strong>
                                </div>
                                <div class="col-md-6 col-xl-3">
                                    <label for="" class="control-label">
                                        Start-End Time
                                    </label>
                                    <strong>@items.StartTime - @items.EndTime</strong>
                                </div>
                                <div class="col-md-6 col-xl-3">
                                    <label for="" class="control-label">
                                        Authority Details
                                    </label>
                                    <strong>@items.AssignOfficerName, @items.AssignOfficerMobNo</strong>
                                </div>
                                <div class="col-md-6 col-xl-3 text-end">
                                    <label for="" class="control-label">
                                        Member Count
                                    </label>
                                    <strong>@items.MemberCount</strong>
                                </div>
                            </div>
                        </div>
                        <div class="hr-divider"></div>
                        <div class="p-3">
                            <div class="row g-4">
                                <div class="col-xl-6">
                                    <strong>Upload Image <span class="text-danger">*</span></strong>
                                    <div class="place-box__img">
                                        @foreach (var itemsimg in Data1)
                                        {
                                            var imglist = itemsimg.imagename.Split("|");
                                            @if (itemsimg.imageid == items.ImgFolderID.ToString() && itemsimg.imagename.Contains("~S1"))
                                            {
                                                @if (isFirstLoop == true)
                                                {
                                                    <label class="place-box__img-uploader">
                                                        <input type="file" name="name" value="" class="image-upload-input" id="imageUpload-@count" accept="image/*" />
                                                        <i class="bi bi-cloud-arrow-up"></i>
                                                        <span class="add-more-img-btn" data-village-id="@itemsimg.villageid" data-td-id="@count" id="addMoreImgBtn">
                                                            Drag and drop here
                                                            <strong class="text-primary">Browse File</strong>
                                                        </span>

                                                    </label>
                                                }
                                                else
                                                {
                                                    <label class="place-box__img-uploader">
                                                        <input type="file" name="name" value="" class="image-upload-input" id="imageUpload-@count" accept="image/*" disabled />
                                                        <i class="bi bi-cloud-arrow-up"></i>
                                                        <span class="add-more-img-btn" data-village-id="@itemsimg.villageid" data-td-id="@count" id="addMoreImgBtn">
                                                            Drag and drop here
                                                            <strong class="text-primary">Browse File</strong>
                                                        </span>

                                                    </label>
                                                }

                                            }
                                            @if (itemsimg.imageid == items.ImgFolderID.ToString() && itemsimg.imagename.Contains("~S1"))
                                            {
                                                <ul class="uploaded-img-list imgcross" id="imageList-@count">
                                                    @foreach (var img in imglist)
                                                    {
                                                        var imgname = img.Split("~")[0];
                                                        var Status = img.Split("~")[1];
                                                        @if (itemsimg.imageid == items.ImgFolderID.ToString())
                                                        {
                                                            <li>
                                                                <div>
                                                                    <img class="img-fluid" data-img-id-name="@itemsimg.imageid|@imgname"
                                                                         src="~/TroupeReporting/@Data[0].TroupeId/Image/@itemsimg.imageid/@imgname">
                                                                    @if (Status == "S1")
                                                                    {
                                                                        @if (isFirstLoop == true)
                                                                        {
                                                                            <i class="bi bi-x-circle-fill"></i>
                                                                        }
                                                                        else
                                                                        {
                                                                            <i id="crossSymbol-@count" class="bi bi-x-circle-fill crossSymbol" style="pointer-events: none; color: #777;"></i>
                                                                        }

                                                                    }
                                                                </div>
                                                            </li>
                                                        }
                                                    }
                                                </ul>
                                                isFirstLoop = false;
                                            }
                                            else
                                            {
                                                @if (itemsimg.imageid == items.ImgFolderID.ToString() && itemsimg.imagename.Contains("~S0"))
                                                {

                                                    <ul class="uploaded-img-list imgcross" id="imageList-@count">
                                                        @foreach (var img in imglist)
                                                        {
                                                            var imgname = img.Split("~")[0];
                                                            var Status = img.Split("~")[1];
                                                            @if (itemsimg.imageid == items.ImgFolderID.ToString())
                                                            {
                                                                <li>
                                                                    <div>
                                                                        <img class="img-fluid" data-img-id-name="@itemsimg.imageid|@imgname"
                                                                             src="~/TroupeReporting/@Data[0].TroupeId/Image/@itemsimg.imageid/@imgname">
                                                                        @if (Status == "S1")
                                                                        {
                                                                            <i class="bi bi-x-circle-fill"></i>
                                                                        }
                                                                    </div>
                                                                </li>
                                                            }
                                                        }
                                                    </ul>

                                                }
                                            }
                                        }

                                    </div>
                                    <small class="text-danger" id="errgrpphoto-@count"></small>
                                    <br />
                                    @foreach (var itemsimg in Data1)
                                    {
                                        @if (itemsimg.imageid == items.ImgFolderID.ToString() && itemsimg.imagename.Contains("~S1"))
                                        {
                                            <button class="btn btn-primary btn-sm mt-3 add-more-img-btn" id="ImgUpldbtn-@count" disabled>Upload</button>
                                        }
                                        else
                                        {
                                        }

                                     }
                                </div>
                                <div class="col-xl-6 vdovlgid">
                                    <strong>Upload Video <span class="text-danger">*</span></strong>
                                    <div class="place-box__img vdotdid">
                                        @foreach (var itemsvdo in Data2)
                                        {
                                            @if (itemsvdo.videoid == items.ImgFolderID.ToString() && itemsvdo.Status == "S1")
                                            {
                                                @if (isFirstLoopVdo == true)
                                                {
                                                    <label class="place-box__img-uploader">
                                                        <input type="file" value="" class="video-upload-input" id="videoUpload-@count" name="videoUpload" accept="video/*" />
                                                        <i class="bi bi-cloud-arrow-up"></i>
                                                        <span class="add-more-vdo-btn" data-village-id="@items.VillageId" data-td-id="@count" id="addMorevideoBtn">
                                                            Drag and drop here
                                                            <strong class="text-primary">Browse File</strong>
                                                        </span>

                                                    </label>
                                                    <ul class="uploaded-img-list uploaded-video-list" id="videoList-@count">
                                                        <li>
                                                            <div class="mb-2">
                                                                <a class="home-gallery__item vclass" href="~/TroupeReporting/@Data[0].TroupeId/Video/@itemsvdo.videoid/@itemsvdo.videoname" target="_blank" id="capturedFrameLink-@cnt">
                                                                    <img id="capturedFrame-@cnt" class="vdo-fluid" data-img-id-name="@itemsvdo.videoid|@itemsvdo.videoname" alt="KSSMS"><span class="home__gallery-icon"><span class="icon-gallery1-expand"></span></span>
                                                                </a>
                                                                @if (itemsvdo.Status == "S1")
                                                                {
                                                                    <i id="crossvdoSymbol-@count" class="bi bi-x-circle-fill vdoxcircle"></i>
                                                                    <i class="bi bi-play-circle-fill"></i>
                                                                }
                                                            </div>
                                                        </li>
                                                    </ul>
                                                }
                                                else
                                                {
                                                    <label class="place-box__img-uploader">
                                                        <input type="file" value="" class="video-upload-input" id="videoUpload-@count" name="videoUpload" accept="video/*" disabled />
                                                        <i class="bi bi-cloud-arrow-up"></i>
                                                        <span class="add-more-vdo-btn" data-village-id="@items.VillageId" data-td-id="@count" id="addMorevideoBtn">
                                                            Drag and drop here
                                                            <strong class="text-primary">Browse File</strong>
                                                        </span>

                                                    </label>
                                                    <ul class="uploaded-img-list uploaded-video-list" id="videoList-@count">
                                                        <li>
                                                            <div class="mb-2">
                                                                <a class="home-gallery__item vclass" href="~/TroupeReporting/@Data[0].TroupeId/Video/@itemsvdo.videoid/@itemsvdo.videoname" target="_blank" id="capturedFrameLink-@cnt">
                                                                    <img id="capturedFrame-@cnt" class="vdo-fluid" data-img-id-name="@itemsvdo.videoid|@itemsvdo.videoname" alt="KSSMS"><span class="home__gallery-icon"><span class="icon-gallery1-expand"></span></span>
                                                                </a>
                                                                @if (itemsvdo.Status == "S1")
                                                                {
                                                                    <i id="crossvdoSymbol-@count" class="bi bi-x-circle-fill vdoxcircle" style="pointer-events: none; color: #777;"></i>
                                                                    <i class="bi bi-play-circle-fill"></i>
                                                                }
                                                            </div>
                                                        </li>
                                                    </ul>
                                                }
                                                isFirstLoopVdo = false;
                                            }
                                            else if (itemsvdo.videoid == items.ImgFolderID.ToString() && itemsvdo.Status != "S1")
                                            {
                                                <ul class="uploaded-img-list uploaded-video-list" id="videoList-@count">
                                                    <li>
                                                        <div class="mb-2">
                                                            <a class="home-gallery__item vclass" href="~/TroupeReporting/@Data[0].TroupeId/Video/@itemsvdo.videoid/@itemsvdo.videoname" target="_blank" id="capturedFrameLink-@cnt">
                                                                <img id="capturedFrame-@cnt" class="vdo-fluid" data-img-id-name="@itemsvdo.videoid|@itemsvdo.videoname" alt="KSSMS"><span class="home__gallery-icon"><span class="icon-gallery1-expand"></span></span>
                                                            </a>
                                                        </div>
                                                    </li>
                                                </ul>
                                            }
                                        }
                                    </div>
                                    <small class="text-danger" id="errgrpvideo-@count"></small>
                                    <br />
                                    @foreach (var itemsvdo in Data2)
                                    {
                                        @if (itemsvdo.videoid == items.ImgFolderID.ToString() && itemsvdo.Status == "S1")
                                        {
                                            <button class="btn btn-primary btn-sm mt-3 add-more-vdo-btn" id="VdoUpldbtn-@count" disabled>Upload</button>
                                        }
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    cnt = cnt + 1;
                    count++;
                    
                }
                <h5 class="view-form-details__title">Remark</h5>
                <div class="row g-4 mb-12">
                    <div class="col-md-12">
                        <label for="" class="control-label">
                            Authority Remarks
                        </label>
                        <strong>
                            @Data[0].AuthorityRemarks
                        </strong>
                    </div>
                </div>
                <div class="row g-4 mb-4">
                    <div class="col-md-12">
                        <div class="form-floating">
                            <textarea class="form-control" placeholder=" " rows="4" id="remark"></textarea>
                            <label for="remark">Remark<span class="text-danger">*</span></label>
                            <small class="text-danger" id="errtxtRemark"></small>
                        </div>
                    </div>
                    <div>
                        <button class="rounded-pill btn btn-primary btn-lg btn--animation" id="submitButton">Submit</button>
                        <button class="rounded-pill btn btn-secondary btn-lg btn--animation">Cancel</button>
                    </div>
                </div>
            </div>
         }
    </div>
</main>
<script>
    $(document).ready(function () {
        var i = 1;
        $(".image-upload-input").change(function () {
            var tdId = $(this).closest('.place-box__img').find('.add-more-img-btn').data('td-id');
            var imgidname = $(this).closest('li').find('.img-fluid').data('img-id-name');
            $('#errgrpphoto-' + tdId + '').text("");
            var img = $("#imageUpload-" + tdId + "").val();
            var maxSize = 1 * 1024 * 1024;
            var fileSize = $(this).get(0).files[0].size;

            if (fileSize > maxSize) {
                $('#errgrpphoto-' + tdId + '').text("File size exceeds 1 MB limit.");
                return false;
            }
            var allowedExtensions = /(\.jpg|\.jpeg|\.png)$/i;
            if (!allowedExtensions.exec(img)) {
                $('#errgrpphoto-' + tdId + '').text("Invalid file type. Please choose a JPEG or PNG file.");
                return false;
            }
            if (img == 0 || img == null || img == undefined) {
                $('#errgrpphoto-' + tdId +'').text("Please Choose Photo!");
                return false;
            }
            else {
                var imageCount = $("#imageList-" + tdId + " li").length;
                if (imageCount != 3) {
                    $("#ImgUpldbtn-" + tdId).prop('disabled', false);
                    var file = $("#imageUpload-" + tdId + "").get(0).files[0];
                    var videofile = "";
                    var TroupeId = $('#hdntroupeid').val();
                    let DynImgIdName = imgidname
                    if (file) {
                        var reader = new FileReader();
                        reader.onload = function () {
                            $("#imageList-" + tdId + "").append(`
                                <li>
                                    <div>
                                        <img class="img-fluid" data-img-id-name="${DynImgIdName}" src="${reader.result}"   />
                                        <i class="bi bi-x-circle-fill"></i>
                                    </div> 
                                </li>`
                            );
                            $("#imageUpload-" + tdId + "").val("");
                        }
                        reader.readAsDataURL(file);
                    }
                  
                    i = i + 1;
                }
                else {
                    $('#errgrpphoto-' + tdId + '').text("Can Not Upload More Than 3 Photo!");
                    $("#imageUpload-" + tdId + "").val("");
                    $("#addMoreImgBtn").prop('disabled', true);
                }
            }
        });
        $(".video-upload-input").change(function () {
            var tdId = $(this).closest('.place-box__img').find('.add-more-vdo-btn').data('td-id');
            var videofile = $("#videoUpload-" + tdId + "").get(0).files[0];
            var vdoidname = $("#hdnvdoidname").val();
            var videoCount = $("#videoList-" + tdId + " li").length;
            if (videoCount != 1) {
                $("#VdoUpldbtn-" + tdId).prop('disabled', false);
                if (videofile) {
                    let DynImgIdName = vdoidname
                    var maxSize = 5 * 1024 * 1024; // 5 MB
                    var fileSize = videofile.size;
                    if (fileSize > maxSize) {
                        $('#errgrpvideo-' + tdId + '').text("Video size exceeds 5 MB limit.");
                        $("#videoUpload-" + tdId + "").val("");
                        return false;
                    }
                    var allowedExtensions = /(\.mp4|\.3gp)$/i;
                    if (!allowedExtensions.exec(videofile.name)) {
                        $('#errgrpvideo-' + tdId + '').text("Invalid file type. Please choose an MP4 or 3GP file.");
                        $("#videoUpload-" + tdId + "").val("");
                        return false;
                    }
                    var reader = new FileReader();
                    reader.onload = function () {
                        const video = document.createElement("video");
                        video.src = URL.createObjectURL(videofile);
                        video.onloadeddata = () => {
                            video.currentTime = 1;
                            const canvas = document.createElement("canvas");
                            canvas.width = 100;
                            canvas.height = 100;
                            const context = canvas.getContext("2d");
                            video.onseeked = function () {
                                context.drawImage(video, 0, 0, canvas.width, canvas.height);
                                const thumbnailImageDataURL = canvas.toDataURL("image/png");
                                $("#videoList-" + tdId + "").empty();
                                $("#videoList-" + tdId).append(`
                               <li>
                                    <div class="mb-2">
                                    <img class="vdo-fluid" data-img-id-name="${DynImgIdName}" src="${thumbnailImageDataURL}" />
                                    <i class="bi bi-play-circle-fill"></i>
                                    <i class="bi bi-x-circle-fill"></i>
                                    </div>
                                </li>`
                                );

                            };
                        }
                    }

                    reader.readAsDataURL(videofile);
                }
            }
            else {
                $('#errgrpvideo-' + tdId + '').text("Can Not Upload More Than 1 Video!");
            }
            
        });
        $(".add-more-img-btn").click(function () {
            var tdid = $("#hdntdid").val();
            var imageCount = $("#imageList-" + tdid + " li").length;
            if (imageCount == 3) {
                uploadImageToServer("", "", "", tdid, 1);
            }
            else {
                $('#errgrpphoto-' + tdid + '').text("Please Upload 3 Photo!");
            }

        });
        $(".add-more-vdo-btn").click(function () {
            var tdId = $(this).closest('.vdovlgid').find('.add-more-vdo-btn').data('td-id');
            var vdoidname = $("#hdnvdoidname").val();
            $('#errgrpvideo-' + tdId + '').text("");
            var img = $("#videoUpload-" + tdId + "").val();
            if (img == 0 || img == null || img == undefined) {
                $('#errgrpvideo-' + tdId + '').text("Please Choose Video!");
                return false;
            }
            else {
                $("#videoList-" + tdId + "").empty();
                var imageCount = $("#videoList-" + tdId + " li").length;
                if (imageCount != 1) {
                    var file = "";
                    var videofile = $("#videoUpload-" + tdId + "").get(0).files[0];

                    var TroupeId = $('#hdntroupeid').val();

                    let DynImgIdName = vdoidname
                    if (videofile) {
                        var reader = new FileReader();
                        reader.onload = function () {
                            const video = document.createElement("video");
                            video.src = URL.createObjectURL(videofile);
                            video.onloadeddata = () => {
                                video.currentTime = 1;
                                const canvas = document.createElement("canvas");
                                canvas.width = 100;
                                canvas.height = 100;
                                const context = canvas.getContext("2d");
                                video.onseeked = function () {
                                    context.drawImage(video, 0, 0, canvas.width, canvas.height);
                                    const thumbnailImageDataURL = canvas.toDataURL("image/png");
                                    $("#videoList-" + tdId).append(`
                                        <li>
                                            <div class="mb-2">
                                            <img class="vdo-fluid" data-img-id-name="${DynImgIdName}" src="${thumbnailImageDataURL}" />
                                            <i class="bi bi-play-circle-fill"></i>
                                            </div>
                                        </li>`
                                    );
                                    $("#videoUpload-" + tdId + "").val("");
                                };
                            }
                        }
                        reader.readAsDataURL(videofile);
                    }
                    uploadImageToServer(file,videofile, DynImgIdName, tdId,2);
                }
                else {
                    $('#errgrpvideo-' + tdId + '').text("Can Not Upload More Than 1 Video!");
                    $("#videoUpload-" + tdId + "").val("");
                }

            }
        });
        $(document).on("click", ".bi-x-circle-fill", function () {
            var hdnid = $("#hdnimgidname").val();
            if (hdnid == "") {
                var tdId = $(this).closest('.place-box__img').find('.add-more-img-btn').data('td-id');
                var imgid = $(this).closest('li').find('.img-fluid').data('img-id-name');
                $("#hdnimgidname").val(imgid);
                $("#hdntdid").val(tdId);
            }
            else {
                var tdId = $(this).closest('.place-box__img').find('.add-more-img-btn').data('td-id');
                var imgid = $(this).closest('li').find('.img-fluid').data('img-id-name');
                var newhdnid = hdnid + "," + imgid;
                $("#hdnimgidname").val(newhdnid);
                $("#hdntdid").val(tdId);
            }
            $(this).closest('li').remove();
            $("#addMoreImgBtn").prop('disabled', false);
        });
        $(document).on("click", ".vdoxcircle", function () {
            //var hdnid = $("#hdnvdoidname").val();
            //if (hdnid == "") {
                var imgid = $(this).closest('li').find('.vdo-fluid').data('img-id-name');
                $("#hdnvdoidname").val(imgid);
           // }
            //else {
            //    var imgid = $(this).closest('li').find('.vdo-fluid').data('img-id-name');
            //    var newhdnid = hdnid + "," + imgid;
            //    $("#hdnvdoidname").val(newhdnid);
            //}
            $(this).parent().remove();
            
        });
    });
    function uploadImageToServer(file, videofile, imageId, tdId,nid) {
        var imageInfoArray = "";
        var formdata = new FormData();
        if (nid == 1) {
            var cnt = 0;
            var id = $('#hdnimgidname').val();
            id = id.split(",");
            formdata.append("ImageIdName", $('#hdnimgidname').val());
            $("#imageList-" + tdId + " li img").each(function () {
                var srcAttribute = $(this).attr("src");
                if (srcAttribute.startsWith('data:image')) {
                    var imgFile = dataURLtoFile($(this).attr("src"), id[cnt]);
                    formdata.append("ImagesFile", imgFile);
                    cnt++;
                }
            });
            $("#imageList-" + tdId + " li i").remove();
        }
        else {
            formdata.append("ImageIdName", imageId);
            formdata.append("Upldvdofile", videofile);
        }
        formdata.append("TroupeId", $('#hdntroupeid').val());
        formdata.append("AssignEventId", $('#hdnassigneventid').val());
        formdata.append("ImgIdPath", $('#hdnimgpath').val());
        formdata.append("VdoIdPath", $('#hdnvdopath').val());
        $.ajax({
            type: "post",
            url: '@Url.Action("RevertUploadImage", "Dashboard", new { area = "" })',
            contentType: false,
            processData: false,
            beforeSend: function (xhr) {
                xhr.setRequestHeader("RequestVerificationToken",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            },
            data: formdata,
            success: function (response) {
                var response1 = JSON.parse(response);
                $("#hdnimgid").val(response1.data);
                $("#hdnvdoid").val(response1.data1);
                new Swal("", response1.message, "");
                if (nid == 1) {
                    var dynamicId = "#IMG-" + tdId;
                    $(dynamicId).hide();
                    $("#ImgUpldbtn-" + tdId).prop('disabled', true);
