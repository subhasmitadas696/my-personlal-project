@{
    ViewData["Title"] = "Index";
}
<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/styles.css" rel="stylesheet" />
<style>
    .innerpage-container {
        min-height: 100vh; 
        display: grid;
        place-content: center;
    }
</style>
<div class="innerpage-container">
    <div class="container">
        <div class="row justify-content-center g-4 align-items-center">
            <div class="col-8 col-md-4 col-xl-3">
                <img src="~/images/chronometer.gif" alt="Timer" class="d-block img-fluid" />
            </div>
            <div class="col-md-8 col-xl-6 text-center text-md-start">
                <h2 class="display-5 text-primary">Your session has expired  due to inactivity.</h2>
                <p class="text-muted">
                    Please log in again.
                </p>
                <a href="/Home/Index" title="Go to Home" class="btn btn-primary">Go to Home</a>
            </div>
        </div>
    </div>
</div>